# ====================
# Compilar e abrir o zathura
# ====================
alias texz='pdflatex -synctex=1'
alias vpdf='zathura'
# Função para compilar e abrir o PDF
compilar() {
  nome="${1%.tex}"
  pdflatex -synctex=1 "$nome.tex" && pgrep -f "zathura $nome.pdf" >/dev/null || zathura "$nome.pdf" &
}

